#!/bin/bash

result=0

MY_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

pushd "${MY_DIR}/.."
echo -e "\nFormatting packages..."
go fmt ./...
popd

echo -e "\nTesting packages..."
go run github.com/onsi/ginkgo/ginkgo -p -r -race -failOnPending -randomizeAllSpecs -skipPackage=integration "$@" $MY_DIR/..
let "result+=$?"

echo -e "\nExit Code: $result"
exit $result
